<ProfilLabel@Label>:
    font_size: 22
    multiline: True
    halign: 'left'
    valign: 'top'
    text_size: self.size
    markup: True
    font_name: 'modern'


<MainView>:
    canvas.before:
        Rectangle:
            size: self.size
            pos: self.pos
            source: 'Grafika/tlo2.png'
        Rectangle:
            size: self.width, self.height
            pos: 0, 0
            size: self.width, root.height * 0.101
        Color:
            rgba: 0, 0, 0, 1
    ImageButton:
        pos: root.width-self.width, 0
        source: 'menu.png'
        size_hint: 0.15, 0.10
        on_press: root.zmiana()

    ImageButton:
        size_hint: 0.15, 0.09
        source: 'Grafika/send.png'
        pos: root.width - 2*self.width, -0.5
        on_press: root.click()

<MenuScreen>:
    canvas.before:
        Rectangle:
            size: self.size
            pos: self.pos
            source: 'Grafika/tlom2.png'
    BoxLayout:
        orientation: 'vertical'
        size_hint_y: 0.55
        size_hint_x: 0.8
        pos: root.width/10, root.height * 0.09
        ImageButton:
            source: 'Grafika/button.png'
            width: root.width
            on_press: root.manager.current = 'chat'
        ImageButton:
            source: 'Grafika/button2.png'
            on_press: root.manager.current= 'profile'
        ImageButton:
            source: 'Grafika/button3.png'
            on_press: root.manager.current= 'date'
        ImageButton:
            source: 'Grafika/button4.png'
            on_press: root.manager.current= 'contact'


<DateScreen>:
    canvas.before:
        Rectangle:
            pos: self.pos
            size: self.size
            source: 'Grafika/tlo2.png'
        Rectangle:
            size: self.width, self.height
            pos: 0, 0
            size: self.width, root.height * 0.09

    FloatLayout:
        Label:
            text: 'Tu jest miejsce na terminy'

        ImageButton:
            pos: root.width-self.width, -0.5
            source: 'menu.png'
            size_hint: 0.2, 0.09
            on_press: root.manager.current= 'menu'

